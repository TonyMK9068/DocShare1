            %a{ :href => "#" } June 2019
          %li
            %a{ :href => "#" } July 2019
          %li
            %a{ :href => "#" } August 2019
          %li
            %a{ :href => "#" } September 2019
          %li
            %a{ :href => "#" } October 2019
          %li
            %a{ :href => "#" } November 2019
          %li
            %a{ :href => "#" } December 2019

    /.blog-sidebar

  /.row

/.container

